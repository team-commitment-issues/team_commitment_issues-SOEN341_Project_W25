{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "../../src",
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "outDir": "../../dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "../../src",
    "paths": {
      "@/*": ["*"],
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@middleware/*": ["middleware/*"],
      "@config/*": ["config/*"],
      "@services/*": ["services/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["../../src/**/*"]
}
