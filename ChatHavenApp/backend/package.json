{
  "name": "@ChatHavenApp/backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p ./config/tsconfig/tsconfig.json",
    "test": "jest --config ./config/jest/jest.config.js",
    "test:watch": "jest --config ./config/jest/jest.config.js --watch",
    "test:coverage": "jest --config ./config/jest/jest.config.js --coverage",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "clean": "rimraf dist coverage",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit -p ./config/tsconfig/tsconfig.json"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.1",
    "mongoose": "^8.13.0",
    "node-cron": "^3.0.3",
    "winston": "^3.17.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.13.13",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@types/winston": "^2.4.4",
    "@types/ws": "^8.18.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
}
