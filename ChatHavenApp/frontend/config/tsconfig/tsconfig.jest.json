{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "jest",
      "@testing-library/jest-dom",
      "node"
    ]
  },
  "include": [
    "../../src/**/*.ts",
    "../../src/**/*.tsx",
    "../../src/setupTests.ts",
    "../../src/jest.polyfills.js",
    "../../src/testUtils.tsx",
    "../../src/types/*.d.ts"
  ]
}