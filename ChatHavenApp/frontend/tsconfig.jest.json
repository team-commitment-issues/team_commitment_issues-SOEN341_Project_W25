{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "types": [
        "jest",
        "@testing-library/jest-dom"
      ]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "jest.setup.ts",
      "jest.polyfills.js",
      "src/types/*.d.ts"
    ]
  }